/* pages/share/share.wxss */
page{
  background:#f1f1f1;
}
.card{
  background:#Fff;
  border:1rpx solid #ddd;
  border-radius: 20rpx;
  margin:30rpx 20rpx;
  padding:30rpx;
  display: flex;
  flex-direction: column;
}
.card-title{
  font-size:20px;
  margin-bottom:20rpx;
}
.card-date{
  font-size:14px;
  color:#ccc;
  padding-bottom: 20rpx;
  margin-bottom:20rpx;
  border-bottom:1rpx solid #ddd
}
.card-image{
  width:100%;
  height:300rpx;
}
.card-desc{
  font-size:16px;
  color:#333;
  padding-bottom:20rpx;
  border-bottom:1rpx solid #ddd;
  margin:20rpx 0
}
.card-read{
  font-size:14px;
  color:#666;

}